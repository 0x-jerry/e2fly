{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "vitest/globals"],
    "paths": {
      "@render/*": ["src-render/*"],
      "@main/*": ["src-main/*"]
    }
  },
  "include": ["src-main", "src-renderer", "vite-plugin"]
}
